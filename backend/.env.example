# ========== API Keys ==========
OPENAI_API_KEY=openai-key
# Get Groq key from: https://console.groq.com/keys (FREE!)
GROQ_API_KEY=groq_key

# Optional: Only needed if using Pinecone instead of FAISS
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# ========== AI Provider Selection ==========
# Set to "true" to use Groq (FREE, faster, higher rate limits)
# Set to "false" to use OpenAI
USE_GROQ=true

# ========== App Configuration ==========
APP_NAME=Health Navigator API
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ========== File Upload ==========
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf

# ========== CORS ==========
FRONTEND_URL=http://localhost:3000

# ========== Vector Store ==========
VECTOR_STORE_TYPE=faiss
EMBEDDING_MODEL=text-embedding-ada-002

# ========== LLM Configuration ==========
# OpenAI models: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.3
MAX_TOKENS=2000


# Groq models (all FREE):
# - llama-3.3-70b-versatile (Best quality, recommended)
# - llama-3.1-70b-versatile (Great for analysis)
# - mixtral-8x7b-32768 (Good for long documents)
# - gemma2-9b-it (Lightweight, fast)
GROQ_MODEL=llama-3.3-70b-versatile
